@model Certificate
@{
    ViewData["Title"] = "CreateCertificate";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sertifikalar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sertifika Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Sertifika Bilgileri </label>
							<input type="text" asp-for="CertificateName" class="form-control" />
							<br />
							<label>Alınan Kurum</label>
							<input type="text" asp-for="Organisation" class="form-control" />
							<br />
							<label>Alınan Tarih </label>
							<input type="text" asp-for="ReceivedDate" class="form-control" />
							<br />
							

						</form>
						<a href="/Create/CreateList/" class="btn btn-primary">Yeni Sertifika Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


