<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>Bana Ulaşın.</h1>

            <p class="lead">Aşağıdaki paneli kullanarak benimle iletişime geçebilir veya mesaj bırakabilirsiniz.</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form name="contactForm" id="contactForm" method="post" action="">
                <fieldset>

                    <div class="form-field">
                        <input name="contactName" type="text" id="contactName" placeholder="İsim Soyisim" value="" minlength="2" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="contactEmail" type="email" id="contactEmail" placeholder="Email" value="" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="contactSubject" type="text" id="contactSubject" placeholder="Konu" value="" class="full-width">
                    </div>
                    <div class="form-field">
                        <textarea name="contactMessage" id="contactMessage" placeholder="Mesajınızı Bırakınız..." rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
                    </div>
                    <div class="form-field">
                        <button class="full-width btn--primary">Gönder</button>
                        <div class="submit-loader">
                            <div class="text-loader">Gönderiliyor...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>

            <!-- contact-warning -->
            <div class="message-warning">
                Bir şeyler ters gitti. Lütfen tekrar deneyin.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Mesajınız gönderildi, teşekkürler!<br>
            </div>

        </div>
        <div class="col-four tab-full contact__infos" style="font-family: 'Roboto',sans-serif;">
            <h4 class="h-100">Telefon Numaram</h4>
            <p>
                Telefon: (+90) 539 834 75 84
            </p>

            <h4 class="h-100">Email</h4>
            <p>
                emirglc3@gmail.com<br>                
            </p>

            <h4 class="h-100">Adres</h4>
            <p>
                İstanbul/Turkey<br>
               
            </p>
        </div>

    </div>

</section>

